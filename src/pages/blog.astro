---
import BlogPost from "../components/BlogPost.astro";
import Layout from "../layouts/Layout.astro";

const paneTitle = "Blog";
const pageHeader = "Custom blog";
const pageDescription = "Here, there will be all the blogposts rendered.";
const posts = await Astro.glob("./posts/*.md");
---

<Layout title={paneTitle}>
  <h1>{pageHeader}</h1>
  <p>{pageDescription}</p>

  <ul>
    {
      posts.map((post) => (
        <BlogPost url={post.url ?? "/"} title={post.frontmatter.title} />
      ))
    }
